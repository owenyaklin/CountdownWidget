<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?android:attr/actionBarSize"
    tools:context=".ui.create.CreateFragment">


    <EditText
        android:id="@+id/fragment_create_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:autofillHints="@string/fragment_create_name"
        android:ems="15"
        android:hint="@string/fragment_create_name_hint"
        android:inputType="text"
        android:text="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_create_date" />

        <TextView
            android:id="@+id/fragment_create_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_create_time" />

        <TextView
            android:id="@+id/fragment_create_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Spinner
        android:id="@+id/fragment_create_timeZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

    <Button
        android:id="@+id/fragment_create_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/fragment_create_create" />

</LinearLayout>
